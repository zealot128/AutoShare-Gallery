%li
  = link_to photos_path do
    %i.fa.fa-camera-retro.fa-fw
    Photos
%li
  = link_to '/photos/search' do
    %i.fa.fa-search.fa-fw
    Suche

%li.dropdown
  %a.dropdown-toggle{data: { toggle: "dropdown", target: "#"} }
    Profil
    %b.caret
  %ul.dropdown-menu(role="menu")
    %li
      = link_to edit_current_user_path do
        %i.fa.fa-key.fa-fw
        Change Password
    %li
      = link_to logout_path  do
        %i.fa.fa-off.fa-fw
        Log out


%li.dropdown
  = link_to shares_path, class: "dropdown-toggle", data: {toggle: "dropdown", target: "#"} do
    %i.fa.fa-share.fa-fw
    Shares
    %b.caret
  %ul.dropdown-menu(role="menu")
    %li= link_to "New Share",shares_path
    - Share.order(:name).find_each do |share|
      %li= link_to share, share

%li.dropdown
  %a.dropdown-toggle{data: { toggle: "dropdown", target: "#"} }
    %i.fa.fa-tag.fa-fw
    Tags
    %b.caret
  %ul.dropdown-menu(role="menu")
    - Photo.tag_counts.each do |tag|
      %li
        = link_to pages_tag_path(tag) do
          = tag.name
          (#{tag.count})
