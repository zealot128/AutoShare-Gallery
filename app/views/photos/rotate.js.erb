var large=<%=json @photo.file.url(:large) %>;
var preview=<%=json @photo.file.url(:preview) %>;
var id="#photo-" + <%=json @photo.id %>;

if (window.current_slide) {
  $(window.current_slide).find('img').attr('src', large)
}
$(id).find("img").each(function() { $(this).attr("src", preview) });
$(id).find("> a").each(function() { $(this).attr("href", large) });


var day = $('h4[data-id=<%= @photo.day.id %>]');
var day_image = <%= json @photo.day.montage.url %>;
day.find("img").attr("src", day_image)
$('#loader').hide()
