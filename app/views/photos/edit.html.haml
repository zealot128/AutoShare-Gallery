= simple_form_for @photo, remote: true, html: { class: "form-horizontal"} do |f|
  = f.input :caption
  = f.input :shot_at, as: :string
  = f.input :tag_list, input_html: { autocomplete: "off"}
  = f.association :shares, as: :check_boxes
  .clear
  .form-group
    .col-sm-3
    .col-sm-7
      = f.submit class: "btn-primary btn"
